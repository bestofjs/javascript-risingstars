---
import type { CollectionEntry } from "astro:content";

export interface Props {
  member: CollectionEntry<"members">;
}
const { member } = Astro.props;

function getAvatarURL(userId: number) {
  const size = 75;
  return `https://avatars0.githubusercontent.com/u/${userId}?v=3&s=${size}`;
}

const { url, name, userId } = member.data;

const avatarURL = getAvatarURL(userId);
const { Content } = await member.render();
---

<div class="translator-list-item">
  <a href={url} aria-label={name}>
    <img
      class="avatar"
      src={avatarURL}
      width="75"
      height="75"
      alt={name}
      loading="lazy"
    />
  </a>
  <div class="translator-item-body">
    <a href={url} class="translator-name">
      {name}
    </a>
    <div class="translator-bio">
      <Content />
    </div>
  </div>
</div>

<style>
  a,
  .translator-bio :global(a) {
    color: #fbf3ef;
  }
  a:hover,
  .translator-bio :global(a:hover) {
    color: #fbf3ef;
    text-decoration: underline;
  }

  .translator-list-item {
    display: flex;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.2);
  }
  .translator-list-item:first-child {
    padding-top: 0;
  }
  .translator-list-item:last-child {
    border-bottom-width: 0;
    padding-bottom: 0;
  }

  .translator-list-item:hover .translator-name {
    color: white;
  }
  .translator-item-body {
    padding-left: 1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .translator-name {
    color: rgba(255, 255, 255, 0.95);
    display: block;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  .avatar {
    background-color: white;
    display: block;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }
</style>
